  "engines": {
    "node": ">=14.x"
  },
  "jest": {
    "resetMocks": true,
    "setupFiles": [
      "whatwg-fetch"
    ],
    "setupFilesAfterEnv": [
      "./jest/setupTests.ts"
    ]
  },
  "prettier": {
    "printWidth": 90,
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
